  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://workflow-360.preview.emergentagent.com",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
